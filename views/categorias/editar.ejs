<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Editar Categoria</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container py-4">
    <div class="container-inner">
      <h2>Editar Categoria</h2>

  <%- include('../partials/messages') %>

  <form action="/categorias/atualizar/<%= categoria._id %>" method="post" class="row g-3">
        <div class="col-8">
          <label class="form-label">Nome</label>
          <input name="nome" class="form-control" value="<%= categoria.nome %>" required>
        </div>
        <div class="col-4">
          <label class="form-label">Cor (opcional)</label>
          <div class="d-flex align-items-center gap-2">
            <input name="cor" type="color" class="form-control form-control-color" style="width:56px; padding:0;" value="<%= categoria.cor || '#ffffff' %>">
            <small class="text-muted">Cor opcional para organizar visualmente suas categorias.</small>
          </div>
        </div>
        <div class="col-12 d-flex">
          <a href="/categorias" class="btn btn-secondary">Voltar</a>
          <button class="btn btn-primary ms-auto" type="submit">Salvar</button>
        </div>
      </form>

    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
