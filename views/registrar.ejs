<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registrar - Gerenciador de Tarefas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container d-flex align-items-center" style="min-height:70vh;">
    <div class="form-container container-inner mx-auto mt-5 p-4 w-100">
      <h2 class="mb-3">Criar conta</h2>

      <% if (typeof erro !== 'undefined') { %>
        <div class="alert alert-danger"><%= erro %></div>
      <% } %>

      <form action="/registrar" method="post" class="form">
        <input id="nome" name="nome" type="text" class="form-control" placeholder="Seu nome" required>
        <input id="email" name="email" type="email" class="form-control" placeholder="seu@email.com" required>
        <input id="senha" name="senha" type="password" class="form-control" placeholder="Senha" required>
        <button type="submit" class="btn btn-primary mt-2">Registrar</button>
      </form>

      <p class="mt-3">JÃ¡ tem conta? <a href="/login">Entrar</a></p>
    </div>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
