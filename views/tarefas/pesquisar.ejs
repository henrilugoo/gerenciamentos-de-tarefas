<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Pesquisar Tarefas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container py-4">
    <div class="container-inner">
      <h2>Pesquisar tarefas</h2>

      <form class="row g-2 mb-3" method="get" action="/tarefas/pesquisar">
        <div class="col-md-4">
          <input name="q" value="<%= q %>" placeholder="Pesquisar título..." class="form-control">
        </div>
        <div class="col-md-3">
          <select name="prioridade" class="form-select">
            <option value="">Todas prioridades</option>
            <% if (prioridades) { %>
              <% prioridades.forEach(function(p){ %>
                <option value="<%= p._id %>" <%= prioridade == String(p._id) ? 'selected' : '' %>><%= p.nivel %></option>
              <% }) %>
            <% } %>
          </select>
        </div>
        <div class="col-md-3">
          <select name="categoria" class="form-select">
            <option value="">Todas categorias</option>
            <% if (categorias) { %>
              <% categorias.forEach(function(c){ %>
                <option value="<%= c._id %>" <%= categoria == String(c._id) ? 'selected' : '' %>><%= c.nome %></option>
              <% }) %>
            <% } %>
          </select>
        </div>
        <div class="col-md-2 d-grid">
          <button class="btn btn-primary">Pesquisar</button>
        </div>
      </form>

      <% if (!tarefas || tarefas.length === 0) { %>
        <p class="text-muted">Nenhuma tarefa encontrada.</p>
      <% } else { %>
        <div class="row g-3">
          <% tarefas.forEach(function(t){ %>
            <div class="col-12">
              <div class="task-card p-3 d-flex justify-content-between">
                <div>
                  <strong><%= t.titulo %></strong>
                  <div class="meta small"><%= t.descricao || '' %></div>
                  <div class="meta small">Início: <%= t.dataInicio ? new Date(t.dataInicio).toLocaleDateString() : '-' %> · Vence: <%= t.dataVencimento ? new Date(t.dataVencimento).toLocaleDateString() : '-' %> · Prioridade: <%= t.id_prioridade ? t.id_prioridade.nivel : '-' %> · Categoria: <%= t.categoria_id ? (t.categoria_id.nome || '-') : '-' %></div>
                </div>
                <div class="text-end">
                  <% if (!t.concluida) { %>
                    <form action="/tarefas/concluir/<%= t._id %>" method="post" class="d-inline me-2">
                      <button type="submit" class="btn btn-sm btn-success">Concluir</button>
                    </form>
                  <% } else { %>
                    <span class="badge bg-success me-2">Concluída</span>
                    <form action="/tarefas/reabrir/<%= t._id %>" method="post" class="d-inline me-2">
                      <button type="submit" class="btn btn-sm btn-outline-warning">Reabrir</button>
                    </form>
                  <% } %>
                  <a href="/tarefas/editar/<%= t._id %>" class="btn btn-sm btn-outline-secondary me-2">Editar</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
