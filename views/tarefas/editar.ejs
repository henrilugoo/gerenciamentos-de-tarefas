<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Editar Tarefa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container py-4">
    <div class="container-inner">
      <h2>Editar tarefa</h2>

      <% if (messages && messages.error) { %>
        <div class="alert alert-danger"><%= messages.error[0] %></div>
      <% } %>

      <%- include('../partials/messages') %>

      <form action="/tarefas/atualizar/<%= tarefa._id %>" method="post" class="row g-3">
        <div class="col-12">
          <label class="form-label">Título</label>
          <input name="titulo" value="<%= tarefa.titulo %>" class="form-control" required>
        </div>
        <div class="col-12">
          <label class="form-label">Descrição</label>
          <input name="descricao" value="<%= tarefa.descricao || '' %>" class="form-control">
        </div>
        <div class="col-md-4">
          <label class="form-label">Início</label>
          <input name="dataInicio" type="date" value="<%= tarefa.dataInicio ? tarefa.dataInicio.toISOString().slice(0,10) : '' %>" class="form-control">
        </div>
        <div class="col-md-4">
          <label class="form-label">Vencimento</label>
          <input name="dataVencimento" type="date" value="<%= tarefa.dataVencimento ? tarefa.dataVencimento.toISOString().slice(0,10) : '' %>" class="form-control">
        </div>
        <div class="col-md-4">
          <label class="form-label">Prioridade</label>
          <select name="id_prioridade" class="form-select">
            <option value="">-- sem prioridade --</option>
            <% prioridades.forEach(function(p){ %>
              <option value="<%= p._id %>" <%= (tarefa.id_prioridade && String((tarefa.id_prioridade._id || tarefa.id_prioridade)) === String(p._id)) ? 'selected' : '' %>><%= p.nivel %></option>
            <% }) %>
          </select>
          <a href="/prioridades/novo?returnTo=/tarefas/editar/<%= tarefa._id %>" target="_blank" class="btn btn-sm btn-primary btn-equal ms-1 mt-1" title="Criar nova prioridade">Nova Prioridade</a>
          <a href="/prioridades" target="_blank" class="btn btn-sm btn-outline-secondary btn-equal ms-1 mt-1" title="Gerenciar prioridades">Gerenciar prioridades</a>
        </div>
        <div class="col-md-4">
          <label class="form-label">Categoria</label>
          <select name="categoria_id" class="form-select">
            <option value="">-- sem categoria --</option>
            <% if (typeof categorias !== 'undefined' && categorias) { %>
              <% categorias.forEach(function(c){ %>
                <option value="<%= c._id %>" <%= (tarefa.categoria_id && String((tarefa.categoria_id._id || tarefa.categoria_id)) === String(c._id)) ? 'selected' : '' %> ><%= c.nome %></option>
              <% }) %>
            <% } %>
          </select>
          <a href="/categorias/novo?returnTo=/tarefas/editar/<%= tarefa._id %>" target="_blank" class="btn btn-sm btn-primary btn-equal ms-1 mt-1" title="Criar nova categoria">Nova Categoria</a>
          <a href="/categorias" target="_blank" class="btn btn-sm btn-outline-secondary btn-equal ms-1 mt-1" title="Gerenciar categorias">Gerenciar categorias</a>
        </div>

        <div class="col-12 d-flex gap-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="concluida" id="concluida" value="1" <%= tarefa.concluida ? 'checked' : '' %>>
            <label class="form-check-label" for="concluida">Concluída</label>
          </div>
          <button class="btn btn-primary ms-auto" type="submit">Salvar</button>
        </div>
      </form>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
