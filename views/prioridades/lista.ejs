<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Prioridades</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container py-4">
    <div class="container-inner">
      <h2>Prioridades</h2>

      <%- include('../partials/messages') %>

      <a href="/prioridades/novo" class="btn btn-primary mb-3">Nova Prioridade</a>

      <% if (!prioridades || prioridades.length === 0) { %>
        <p class="text-muted">Nenhuma prioridade.</p>
      <% } else { %>
        <div class="list-group">
          <% prioridades.forEach(function(p){ %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= p.nivel %></strong>
              </div>
              <div>
                <a class="btn btn-sm btn-outline-secondary me-2" href="/prioridades/editar/<%= p._id %>">Editar</a>
                <form action="/prioridades/deletar/<%= p._id %>" method="post" class="d-inline" onsubmit="return confirm('Excluir esta prioridade?');">
                  <button class="btn btn-sm btn-danger">Excluir</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
