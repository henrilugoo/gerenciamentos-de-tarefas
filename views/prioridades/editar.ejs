<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Editar Prioridade</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container py-4">
    <div class="container-inner">
      <h2>Editar Prioridade</h2>

      <%- include('../partials/messages') %>

      <form action="/prioridades/atualizar/<%= prioridade._id %>" method="post" class="row g-3">
        <div class="col-8">
          <label class="form-label">Nome (ex: Alta)</label>
          <input name="nivel" class="form-control" value="<%= prioridade.nivel %>" required>
        </div>
        <div class="col-12 d-flex">
          <a href="/prioridades" class="btn btn-secondary">Voltar</a>
          <button class="btn btn-primary ms-auto" type="submit">Salvar</button>
        </div>
      </form>

    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
