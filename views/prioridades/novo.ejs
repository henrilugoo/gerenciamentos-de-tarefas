<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Nova Prioridade</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container py-4">
    <div class="container-inner">
      <h2>Nova Prioridade</h2>

      <%- include('../partials/messages') %>

      <form action="/prioridades/criar" method="post" class="row g-3">
        <% if (typeof returnTo !== 'undefined' && returnTo) { %>
          <input type="hidden" name="returnTo" value="<%= returnTo %>">
        <% } %>
        <div class="col-8">
          <label class="form-label">Nome (ex: Alta)</label>
          <input name="nivel" class="form-control" required>
        </div>
        <div class="col-12 d-flex">
          <a href="/prioridades" class="btn btn-secondary">Voltar</a>
          <div class="ms-auto">
            <button name="continue" value="1" class="btn btn-outline-primary me-2" type="submit">Criar e nova</button>
            <button class="btn btn-primary" type="submit">Criar</button>
          </div>
        </div>
      </form>

    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
